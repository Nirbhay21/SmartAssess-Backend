#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

set -e

echo ""
echo "Husky: Starting pre-commit checks"
echo "----------------------------------------"

echo ""
echo "Step 1: Running TypeScript type-check (entire project)"
echo "----------------------------------------"
npm run type-check

echo ""
echo "Step 2: Running linting & formatting (staged files only)"
echo "----------------------------------------"
npm run lint:staged

echo ""
echo "All pre-commit checks passed"
echo "----------------------------------------"
echo "Commit ready. Proceeding..."
echo ""